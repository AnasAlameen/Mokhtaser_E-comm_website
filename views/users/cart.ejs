<%- include('../includes/shop/head.ejs') %>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/cart.css">
</head>

<%- include('../includes/users/Navgation.ejs') %>
<input type="hidden" name="_csrf" value="<%= csrfToken %>">

<div class="container mt-5">
  <h2 class="text-center mb-4">سلة التسوق</h2>
  <% if (Object.keys(groupedProducts).length === 0) { %>
    <p class="text-center">سلة التسوق فارغة.</p>
  <% } else { %>
    <% Object.keys(groupedProducts).forEach(sellerId => { %>
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="h5 mb-0"><%= "متجر " + groupedProducts[sellerId].sellerName %></h3>
        </div>
        <ul class="list-group list-group-flush">
          <% groupedProducts[sellerId].products.forEach((product, index) => { %>
            <li class="list-group-item d-flex align-items-center">
              <input type="checkbox" name="selectedProducts" value="<%= product.ProductId %>" class="product-checkbox">
              <img src="/images/<%= product.image_url.split('\\').pop() %>" alt="Product Image" class="img-thumbnail me-3 product-image">
              <div class="flex-grow-1">
                <h3 class="h6"><%= product.ProductName %></h3>
                <p class="product-description"><%= product.Discrption %></p>
                <div class="d-flex align-items-center">
                  <label for="quantity_<%= product.id %>" class="me-2">الكمية:</label>
                  <input type="number" id="quantity_<%= product.ProductId%>" value="<%= product.qty %>" min="1" class="form-control me-3 quantity-input">
                  <p id="Prise_<%= product.ProductId %>" class="mb-0 me-3">السعر: $<%= product.Prise %></p>
                  <input type="hidden" id="VOCId_<%= product.ProductId %>" value="<%= product.VOCId %>">
                  <input type="hidden" id="VOId_<%= product.ProductId %>" value="<%= product.VOId %>">
                  <p class="mb-0">اللون: <%= groupedProducts[sellerId].colors[index] %></p>
                  <p class="mb-0">اللون: <%= groupedProducts[sellerId].options[index] %></p>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  <% } %>
</div>

<div class="checkout text-center my-4">
  <h3 id="totalPrice" class="mb-3">المجموع: $0</h3>
  <button id="checkout">تنفيذ الشراء</button>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/cart.js"></script>

<%- include('../includes/shop/end.ejs') %>
