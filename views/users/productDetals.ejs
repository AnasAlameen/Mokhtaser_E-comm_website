<%- include('../includes/shop/head.ejs') %>

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link rel="stylesheet" href="/css/head.css">
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<%- include('../includes/shop/navgation.ejs') %>

<form id="all" enctype="multipart/form-data">
  <section>
    <div class="container mx-auto flex flex-wrap justify-between">
      <div class="left w-full lg:w-1/2 p-4">
        <!-- Main Product Image -->
        <div class="main_image">
          <img src="/<%= imageURLs[0].replace(/\\/g, '/') %>" name="main" class="slide w-full h-auto" />
        </div>
        <!-- Thumbnail Images -->
        <div class="option flex flex-wrap mt-4">
          <% imageURLs.forEach(imageUrl => { %>
          <img src="/<%= imageUrl.replace(/\\/g, '/') %>" alt="Product Image" class="w-24 h-24 p-2 cursor-pointer" />
          <% }) %>
        </div>
      </div>
      <div class="right w-full lg:w-1/2 p-4 text-right">
        <% if (product.ProductName && product.Prise && product.Discrption) { %>
        <!-- Product Details -->
        <h2 class="text-2xl font-bold mb-4"><%= product.ProductName %></h2>
        <p class="mb-4"><%= product.Discrption %></p>
        <h4 class="text-xl text-red-500 mb-4"><small>$</small><%= product.Prise %></h4>
        <% } else { %>
        <p>Image does not exist</p>
        <% } %>
        
        <div class="mt-4 mb-6">
          <div id="text_sm" class="text-sm bg-gray-200 p-2">
            اللون: أحمر أخضر المقاس: XL XXL ...
          </div>
        </div>

        <!-- Additional Product Images and Details -->
        <div id="main">
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-2" id="grid">
            <% vartins.forEach(imageUrl => { %>
            <img src="/<%= imageUrl %>" alt="Product Image" class="w-full h-auto" />
            <% }) %>
          </div>
          <!-- Size Options -->
          <div class="detals mt-4" id="details1">
            <% variantOptions.forEach(option => { %>
            <label class="label2 inline-block bg-white border border-green-500 text-black py-2 px-4 rounded-full text-center cursor-pointer mb-2"><%= option.value %></label>
            <% }) %>
          </div>
          <!-- Quantity Input -->
          <div class="plus mt-4 flex justify-center">
            <input type="number" id="number" class="number w-1/4 border border-black rounded-full text-center py-2" value="1" />
          </div>
        </div>
        
        <!-- Toggle Details Link -->
        <div class="mt-6">
          <a href="#" id="details" class="text-blue-600 hover:underline text-sm">عرض التفاضيل ></a>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex space-x-4 my-6">
          <button class="flex-1 bg-red-500 text-white py-2 px-4 rounded" id="addTo">
            الاضافة الى السلة
          </button>
          <button class="flex-1 bg-green-500 text-white py-2 px-4 rounded" id="buyNow">اشتري الان
          </button>
        </div>
      </div>
    </div>
  </section>
</form>

<script src="/js/prdouctDetls.js"></script>

<%- include('../includes/shop/end.ejs') %>