    font-size: 16px;
    margin-bottom: 10px;
}

.order-details p, .shipping-details p {
    margin: 5px 0;
    font-size: 14px;
}

.order-details ul {
    padding: 0;
    list-style-type: none;
}

.order-details ul li {
    background-color: #eee;
    padding: 5px;
    margin: 5px 0;
    border-radius: 4px;
    display: inline-block;
}

button {
    background-color: #069a8e;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
    width: 50%;
    margin-top: 15px;
    margin-bottom: 15px;
}

button:hover {
    background-color: #05534d;
}

.checkout {
    border-top: 1px solid #ccc;
    padding-top: 20px;
    text-align: center;
}

.checkout h3 {
    margin-bottom: 20px;
}

.checkout button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.checkout button:hover {
    background-color: #0056b3;
}

@media (max-width: 576px) {
    .card-header h3 {
        font-size: 16px;
    }

    .product img {
        width: 80px;
        height: 80px;
        margin-left: 10px;
    }

    button {
        font-size: 12px;
        padding: 5px 10px;
        width: 80%;
    }

    .container {
        padding: 10px;
    }

    .shipping-info {
        grid-template-columns: 1fr;
    }
}

.hide {
    display: none;
}
</style>

