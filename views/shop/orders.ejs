    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10px;
}

.p1, .product-details p {
    margin: 5px 0;
    font-size: 14px;
}

.shipping-info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    padding: 10px;
    margin-top: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
}

.order-details {
    padding: 10px;
    border-radius: 5px;
    background-color: #fff;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    height: auto;
}

.shipping-details {
    display: grid;
    grid-template-columns: 1fr;
    padding: 10px;
    border-radius: 5px;
    background-color: #fff;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
