<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <link rel="stylesheet" href="/styles/editProduct.css">
</head>
<body>
  <div class="container mx-auto my-5">
    <h1 class="text-2xl font-bold mb-4">Edit Product</h1>
    <form id="edit-product-form" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="mb-4">
        <label for="product-name" class="form-label">Product Name:</label>
        <input type="text" class="form-control" id="product-name" name="ProductName" value="<%= product.ProductName %>">
      </div>
      <div class="mb-4">
        <label for="product-description" class="form-label">Description:</label>
        <textarea class="form-control" id="product-description" name="ProductDiscrption"><%= product.Discrption %></textarea>
      </div>
      <div class="mb-4">
        <label for="product-price" class="form-label">Price:</label>
        <input type="number" class="form-control" id="product-price" name="PrdustPrise" value="<%= product.Prise %>">
      </div>
      <div class="mb-4">
        <label for="product-category" class="form-label">Category:</label>
        <input type="text" class="form-control" id="product-category" name="SubCategorie" value="<%= product.SubCategorie %>">
      </div>
      <div class="mb-4">
        <label class="form-label">Images:</label>
        <input type="file" class="form-control" id="product-images" name="image1" multiple>
        <div id="current-images" class="mt-2">
          <% imageURLs.forEach(url => { %>
            <img src="/<%= url %>" class="w-20 h-20 inline-block">
          <% }) %>
        </div>
      </div>
      <div id="colors-section" class="mb-4">
        <h3 class="text-xl font-bold mb-2">Colors</h3>
        <% Object.keys(combinations).forEach(key => { %>
          <div class="color-item p-3 border mb-2">
            <label class="form-label">Color: <input type="text" class="form-control" value="<%= combinations[key].color %>" data-type="color-name"></label>
            <label class="form-label">Quantity: <input type="number" class="form-control" value="<%= combinations[key].qty %>" data-type="color-quantity"></label>
            <label class="form-label">Price: <input type="number" class="form-control" value="<%= combinations[key].price %>" data-type="color-price"></label>
            <img src="/<%= combinations[key].image %>" class="w-20 h-20 inline-block">
            <div>
              <h4 class="text-lg font-semibold mt-2">Related Sizes:</h4>
              <% combinations[key].relatedVariants.forEach(variant => { %>
                <div class="size-item p-2 border mb-1">
                  <label class="form-label">Size: <input type="text" class="form-control" value="<%= variant.value %>" data-type="size-value"></label>
                  <label class="form-label">Quantity: <input type="number" class="form-control" value="<%= variant.qty %>" data-type="size-quantity"></label>
                  <label class="form-label">Price: <input type="number" class="form-control" value="<%= variant.price %>" data-type="size-price"></label>
                </div>
              <% }) %>
            </div>
          </div>
        <% }) %>
        <button id="add-color-btn" class="btn btn-primary mt-2">Add Color</button>
      </div>
      <div id="sizes-section" class="mb-4">
        <h3 class="text-xl font-bold mb-2">Sizes</h3>
        <% sizes.forEach(size => { %>
          <div class="size-item p-3 border mb-2">
            <label class="form-label">Size: <input type="text" class="form-control" value="<%= size.value %>" data-type="size-value"></label>
            <label class="form-label">Quantity: <input type="number" class="form-control" value="<%= size.qty %>" data-type="size-quantity"></label>
            <label class="form-label">Price: <input type="number" class="form-control" value="<%= size.prise %>" data-type="size-price"></label>
          </div>
        <% }) %>
        <button id="add-size-btn" class="btn btn-primary mt-2">Add Size</button>
      </div>
      <button type="submit" class="btn btn-success">Save</button>
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/editeProduct.js"></script>
</body>
</html>
