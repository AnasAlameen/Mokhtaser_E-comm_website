<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <%- include('../includes/shop/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/profile.css">
    <title>الملف الشخصي - <%= getUserInformations[0].FirstName %></title>
</head>
<body>
    <%- include('../includes/shop/navgation.ejs') %>

    <div class="container mt-5">
        <div class="profile-header">
            <div class="profile-background" style="background-image: url('./perfil.png');">
                <div class="profile-avatar">
                    <img src="./perfil.png" alt="صورة الملف الشخصي">
                </div>
            </div>
            <div class="profile-info text-center ">
                <h2 class="mb-2"><%= getUserInformations[0].FirstName %> <%= getUserInformations[0].LastName %></h2>
                <p class="text-muted mb-2"><%= getUserInformations[0].username %></p>
                <p class="text-muted mb-3"><i class="fas fa-phone me-2"></i><a href="https://wa.me/<%= getUserInformations[0].Phone %>" target="_blank"><%= getUserInformations[0].Phone || 'رقم الهاتف غير متوفر' %></a></p>
                <button class="btn btn-primary" onclick="editProfile()">
                    <i class="fas fa-edit me-2"></i>تعديل البيانات الشخصية
                </button>
            </div>
            
            <div class="row text-center user-stats mt-4">
                <div class="col-4">
                    <h5>المنتجات</h5>
                    <p class="text-primary fw-bold">0</p>
                </div>
                <div class="col-4">
                    <h5>المتابعون</h5>
                    <p class="text-primary fw-bold">0</p>
                </div>
                <div class="col-4">
                    <h5>المتابَعون</h5>
                    <p class="text-primary fw-bold">0</p>
                </div>
            </div>
        </div>
    </div>

    <section id="latest-jobs" class="mt-5">
        <h2>محتويات السلة </h2>
        <ul class="row">
            <% products.forEach(product => { %>
                <li class="col-lg-4 col-md-6 col-sm-12">
                    <a href="http://localhost:3000/user/product/details?product_id=<%= product.id %>">
                        <img src="../images/<%= product.url.split('\\').pop() %>" alt="Product Image" />
                        <h3><%= product.ProductName %></h3>
                        <p class="prise"><%= product.Prise %></p>
                    </a>
                </li>
            <% }) %>
        </ul>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/profile.js"></script>
</body>
</html>
